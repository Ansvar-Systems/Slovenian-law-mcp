{
  "name": "@ansvar/slovenian-law-mcp",
  "version": "1.1.0",
  "mcpName": "eu.ansvar/slovenian-law-mcp",
  "description": "Production-grade Slovenian legal research MCP server with comprehensive statute coverage and EU law cross-references",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "slovenian-law-mcp": "dist/index.js"
  },
  "files": [
    "dist",
    "data/database.db",
    "server.json"
  ],
  "scripts": {
    "build": "tsc",
    "build:db": "tsx scripts/build-db.ts",
    "build:db:paid": "tsx scripts/build-db-paid.ts",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "ingest": "tsx scripts/ingest-pis.ts",
    "ingest:all": "tsx scripts/auto-ingest-all-statutes.ts",
    "ingest:cases": "tsx scripts/ingest-sodnapraksa.ts",
    "ingest:prep-works": "tsx scripts/ingest-preparatory-works.ts",
    "check-updates": "tsx scripts/check-updates.ts",
    "extract:definitions": "tsx scripts/extract-definitions.ts",
    "populate:xrefs": "tsx scripts/populate-cross-references.ts",
    "audit:seeds": "tsx scripts/audit-seeds.ts",
    "fetch:eurlex": "tsx scripts/fetch-eurlex-metadata.ts",
    "import:eurlex-documents": "tsx scripts/import-eurlex-documents.ts",
    "verify:seeds": "npm run audit:seeds && npm run build:db",
    "verify:release": "npm run verify:seeds && npm run build && npm test",
    "prepublishOnly": "npm run verify:release",
    "postinstall": "test -d dist || npm run build || true"
  },
  "dependencies": {
    "@ansvar/mcp-sqlite": "^1.0.0",
    "@modelcontextprotocol/sdk": "^1.25.3"
  },
  "devDependencies": {
    "@types/node": "^22.15.29",
    "@vercel/node": "^5.6.3",
    "fast-xml-parser": "^5.3.5",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ansvar-Systems/Slovenian-law-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/Ansvar-Systems/Slovenian-law-mcp/issues"
  },
  "homepage": "https://github.com/Ansvar-Systems/Slovenian-law-mcp#readme",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai",
    "claude",
    "slovenian-law",
    "slovenia",
    "legal",
    "compliance",
    "pisrs",
    "pis",
    "sodnapraksa",
    "ansvar"
  ],
  "author": "Ansvar Systems AB <hello@ansvar.ai>",
  "license": "Apache-2.0"
}
